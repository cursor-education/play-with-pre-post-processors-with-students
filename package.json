{
  "name": "app",
  "dependencies": {
    "autoprefixer": "^6.5.3",
    "del": "^2.2.2",
    "del-cli": "^0.2.0",
    "gh-pages": "^0.12.0",
    "git-scripts": "^0.2.1",
    "http-server": "^0.9.0",
    "node-sass": "^3.13.0",
    "onchange": "^3.0.2",
    "opn": "^4.0.2",
    "opn-cli": "^3.1.0",
    "postcss-cli": "^2.6.0",
    "pug": "^2.0.0-beta6",
    "pug-cli": "^1.0.0-alpha6",
    "pug-lint": "^2.3.0"
  },
  "scripts": {
    "test": "npm run lint",
    "cleanup": "del dest/*",
    "lint:pug": "pug-lint src/views",
    "lint:css": "echo 2",
    "lint": "npm run lint:pug && npm run lint:css",
    "build:html": "npm run lint:pug && pug --out dest/ --pretty src/views/pages",
    "build:css": "npm run lint:css && node-sass src/styles/ -o dest/ --output-style expanded && npm run build:css:autoprefixer",
    "build:css:autoprefixer": "postcss --use autoprefixer dest/*.css --replace",
    "build": "npm run cleanup && npm run build:html && npm run build:css",
    "watch": "onchange 'src/**/*.*' -- npm run build",
    "open": "opn http://localhost:8080/",
    "serve": "http-server dest/"
  },
  "git": {
    "scripts": {
      "pre-commit": "npm run lint"
    }
  }
}
